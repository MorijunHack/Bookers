<section class="index">

	<% if flash[:notice] %>
		<p class="flash"><%= flash[:notice] %></p>
	<% end %>

	<h1>Books</h1>

	<table cellpadding="15">
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book), class: "lnk" %></td>
					<td><%= link_to "Edit", edit_book_path(book), class: "lnk" %></td>
					<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm"=>"Are you sure？", class: "lnk" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h2>New book</h2>

	<%= form_for @book do |f| %>
	
		<% if @book.errors.any? %>
		  <div id="error_explanation">
		    <h2><%= @book.errors.count %>件のエラーがあります。</h2>
		 
		    <ul>
			    <% @book.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
		    </ul>
		  </div>
		<% end %>

		<p>Title</p>
		<%= f.text_field :title, class: "title_form" %>

		<p>Body</p>
		<%= f.text_area :body, class: "body_form" %>

		<p><%= f.submit "Create Book" %></p>
	<% end %>
</section>
