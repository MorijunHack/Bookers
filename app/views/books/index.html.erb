<section class="index">
	<h1>Books</h1>

	<table cellpadding="15">
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book) %></td>
					<td><%= link_to "Edit", edit_book_path(book) %></td>
					<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm"=>"Are you sureï¼Ÿ" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h1>New book</h1>

	<%= form_for @book do |f| %>
		<p>Title</p>
		<p class="form_title"><%= f.text_field :title %></p>

		<p>Body</p>
		<p class="form_body"><%= f.text_area :body %></p>

		<p><%= f.submit "Create Book" %></p>
	<% end %>
</section>
